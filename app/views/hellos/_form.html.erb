<!-- Form Builder -->
<%= form_with model: hello do |form| %>
  <p>
    <%= form.label :lang %><br>
    <%= form.text_field :lang %>
  </p>

  <p>
    <%= form.label :word %><br>
    <%= form.text_area :word %>
    <% @hello.errors.full_messages_for(:word).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </p>

  <p>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </p>

  <p>
    <% @hello.errors.full_messages_for(:status).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </p>

  <div>
    <%= form.submit %>
  </div>
<% end %>